graph Heap {
    node [shape=circle];

    /* ノードの定義: labelはヒープの値 */
    n1  [label="2"];
    n2  [label="6"];
    n3  [label="4"];
    n4  [label="9"];
    n5  [label="7"];
    n6  [label="5"];

    /* エッジの定義: 親子関係 */
    /* 根(2) からの子 */
    n1 -- n2;
    n1 -- n3;

    /* 左の子(6) からの子 */
    n2 -- n4;
    n2 -- n5;

    /* 右の子(4) からの子 */
    n3 -- n6;
}